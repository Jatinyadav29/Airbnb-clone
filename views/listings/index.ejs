<main class="my-4">
  <!-- Collapsible Filter Panel -->
  <div id="filter" class="flex flex-wrap gap-4 align-items-center my-3">
    <button
      class="btn btn-link d-md-none text-decoration-none"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#filterCollapse"
      aria-expanded="false"
      aria-controls="filterCollapse"
    >
      <i class="fa-solid fa-filter"></i> Filters
    </button>

    <div class="collapse d-md-block" id="filterCollapse">
      <div class="d-flex flex-wrap gap-4 align-items-center">
        <a href="/listings?category=trending" class="filter">
          <div><i class="fa-solid fa-fire"></i></div>
          <p>Trending</p>
        </a>

        <a href="/listings?category=rooms" class="filter">
          <div><i class="fa-solid fa-bed"></i></div>
          <p>Rooms</p>
        </a>

        <a href="/listings?category=Iconic" class="filter">
          <div><i class="fa-solid fa-mountain-city"></i></div>
          <p>Iconic Cities</p>
        </a>

        <a href="/listings?category=mountains" class="filter">
          <div><i class="fa-solid fa-mountain"></i></div>
          <p>Mountains</p>
        </a>

        <a href="/listings?category=castles" class="filter">
          <div><i class="fa-brands fa-fort-awesome"></i></div>
          <p>Castles</p>
        </a>

        <a href="/listings?category=Swimming" class="filter">
          <div><i class="fa-solid fa-person-swimming"></i></div>
          <p>Amazing Pools</p>
        </a>

        <a href="/listings?category=camping" class="filter">
          <div><i class="fa-solid fa-campground"></i></div>
          <p>Camping</p>
        </a>

        <a href="/listings?category=farms" class="filter">
          <div><i class="fa-solid fa-wheat-awn"></i></div>
          <p>Farms</p>
        </a>

        <a href="/listings?category=arctic" class="filter">
          <div><i class="fa-solid fa-snowflake"></i></div>
          <p>Arctic</p>
        </a>

        <a href="/listings?category=vineyard" class="filter">
          <div><i class="fa-solid fa-champagne-glasses"></i></div>
          <p>Vineyard</p>
        </a>

        <div class="tax-toggle">
          <div class="form-check-reverse form-switch">
            <input
              class="form-check-input"
              type="checkbox"
              role="switch"
              id="switchCheckDefault"
            />
            <label class="form-check-label" for="switchCheckDefault"
              >Display total after Taxes</label
            >
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Listings Section -->
  <% if (allListings && allListings.length) { %>
  <div class="container">
    <div class="row g-4 align-items-stretch">
      <% allListings.forEach(listing => { %>
      <div class="col-md-4">
        <article class="card custom-card h-100" role="article">
          <a href="/listings/<%= listing._id %>" class="linked">
            <!-- Image -->
            <div class="card-media">
              <img
                src="<%= listing.image.url %>"
                alt="Image of <%= listing.title %>"
                loading="lazy"
              />
            </div>

            <!-- Body -->
            <div class="card-body d-flex flex-column">
              <h5 class="card-title mb-2"><%= listing.title %></h5>

              <p class="card-desc mb-3"><%= listing.description %></p>

              <div class="mt-auto">
                <div class="location-card">
                  <div class="location-icon">
                    <i class="fa-solid fa-map-pin" aria-hidden="true"></i>
                  </div>
                  <p class="location-text">
                    <%= listing.location %>, <%= listing.country %>
                  </p>
                </div>

                <div
                  class="d-flex justify-content-between align-items-center mb-3 meta-row"
                >
                  <div class="price-card">
                    <p class="price-amount">
                      â‚¹<%= listing.price %><span class="tax-info"
                        >&nbsp;+ 18% GST</span
                      >
                    </p>
                  </div>
                </div>
              </div>
            </div>
          </a>
        </article>
      </div>
      <% }) %>
    </div>
  </div>
  <% } else { %>
  <p class="empty">No listings found.</p>
  <% } %>
</main>

<script>
  let taxSwitch = document.getElementById("switchCheckDefault");
  taxSwitch.addEventListener("click", () => {
    let taxInfo = document.getElementsByClassName("tax-info");
    for (info of taxInfo) {
      if (info.style.display != "inline") {
        info.style.display = "inline";
      } else {
        info.style.display = "none";
      }
    }
  });
</script>
